<div class='container justify-content-center'>
  <h2> My Bookings </h2><br>
  <% if @bookings.blank? %>
    <div class="card booking">
      <p> You currently have no bookings. Browse our <%= link_to 'chefs', chefs_path, class: 'btn btn-yellow' %> and search for your favourite cuisine.</p>
    </div>
  <% else %>
    <% @bookings.each do |booking| %>
      <% if booking.user == current_user %>
        <div class="card booking">
          <p>Chef name: <strong><%= booking.chef.user.first_name %></strong> : <%= booking.chef.speciality %></p>
          <p>Date: <%= booking.date %> <%= booking.start_hour.hour %>.00 - <%= booking.end_hour.hour %>.00</p>
          <p>Price: <strong>Â£<%= booking.chef.price * ((booking.end_hour.hour - booking.start_hour.hour)/1).round(2) %></strong></p>
          <div>
            <%= link_to 'DELETE BOOKING', booking_path(booking), class: 'btn btn-sm btn-orange float-right', method: :delete, data: { confirm: 'ðŸš¨ Are you sure you would like to delete this booking? ðŸš¨' } %></p></div>
          </div>
      <% end %>
    <% end %>
  <% end %>
  <% @bookings.each do |booking| %>
    <% if booking.chef.user == current_user %>
      <div class="card booking">
        <p>Customer name: <strong><%= booking.user.first_name %></strong> <strong><%= booking.user.last_name %></strong></p>
        <p>Date: <%= booking.date %> <%= booking.start_hour.hour %>.00 - <%= booking.end_hour.hour %>.00</p>
        <p>Price: <strong>Â£<%= (booking.chef.price * ((booking.end_hour.hour - booking.start_hour.hour)/1).round(2)) * 0.1 %></strong></p>
      </div>
    <% end %>
  <% end %>
</div>
